
<% @game.chats.each do |chat| %>
  <% chat_user = chat.user %>
    <div class='row mt-1 ml-1 mr-1 border-bottom  border-dark'>
      <div class='col-1 ml-1 mb-1'><%= chat_user.name %></div>
      <div class='col-1'><%= chat.created_at.strftime('%Y/%m/%d') %></div>
      <div class='col align-items-stretch'><%= chat.comment %></div>
      <% if current_user == chat_user %>
        <div class='col-1'><%= link_to 'Destroy', game_chat_path(chat.game_id, chat.id), class: 'btn-sm btn-danger', method: :delete %></div>
      <% end %>
    </div>
<% end %>
<% if user_signed_in? %>
  <%= form_with model:[@game,@chat], remote: true do |f| %>
    <div class='row mt-2'>
      <div class='col-10'><%= f.text_area :comment, size:"120x3" %></div>
      <div class='col ml-5 align-self-center'><%= f.submit '送信', class: 'btn btn-lg btn-success'%></div>
    </div>
  <% end %>
<% end %>