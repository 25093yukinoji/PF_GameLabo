<% if obj.errors.any? %>
  <div id="error_explanation">
    <div class='row'>
      <h3><%= pluralize(obj.errors.count, "件のエラーが出ています") %></h3>
    </div>
    <div class='row'>
      <ul>
        <% obj.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>