<% content_for(:title, 'お気に入り一覧') %>
<div class="row">
  <div class="col-lg-10 offset-lg-1">
    <!-- 検索フォーム -->
    <form>
      <div class="input-group mb-3"><input class="form-control" placeholder="検索ワード" type="search"></input>
        <div class="input-group-append ml-1"><input type="submit" value="検索" class="btn btn-primary"></input></div>
      </div>
    </form>
  </div>
</div>
<!-- 掲示板一覧 -->
<div class="row">
  <div class="col-12">
    <% if @game.present? %>
      <% @favorites.each do |game| %>
        <div class='row'>
          <div class='col-4 pt-2'>
            <%= link_to game_path(game) do %>
              <%= attachment_image_tag game, :image, :fill, 220, 200, fallback: "img/noimage-1-580x440.png" %>
            <% end %>
          </div>
          <div class='col-3 align-self-center'>
            <h4><%= game.title %></h4>
          </div>
          <div class='col-2 align-self-center'>
            <h4>★★★★★4.5</h4>
          </div>
        </div>
      <% end %>
    <% else %>
      <p><%= t('.no_title') %></p>
    <% end %>
  </div>
</div>
